{
  "request": {
    "method": "POST",
    "url": "/api/pay",
    "bodyPatterns": [
      {
        "matchesJsonPath": "$[?(!(@.should_fail == true || @.should_fail == 'true' || @.should_fail == 'True'))]"
      }
    ],
    "headers": {
      "Content-Type": {
        "contains": "application/json"
      }
    }
  },
  "response": {
    "status": 200,
    "jsonBody": {
      "status": "pay"
    },
    "headers": {
      "Content-Type": "application/json"
    }
  }
}
